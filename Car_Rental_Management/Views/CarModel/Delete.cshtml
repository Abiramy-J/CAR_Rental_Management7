@model Car_Rental_Management.Models.CarModel

<h2 class="mb-4 text-center text-danger fw-bold animate__animated animate__fadeInDown">
    🗑️ Delete Car Model
</h2>

<div class="alert alert-warning shadow-sm animate__animated animate__fadeIn">
    ⚠️ You are about to permanently delete this car model.
    <strong>This action cannot be undone!</strong>
</div>

<div class="card shadow-sm p-4 rounded-3 bg-white animate__animated animate__fadeInUp">
    <dl class="row mb-4">
        <dt class="col-sm-4 fw-semibold">Brand</dt>
        <dd class="col-sm-8">@Model.Brand</dd>

        <dt class="col-sm-4 fw-semibold">Model Name</dt>
        <dd class="col-sm-8">@Model.ModelName</dd>

        <dt class="col-sm-4 fw-semibold">Year</dt>
        <dd class="col-sm-8">@Model.Year</dd>

        <dt class="col-sm-4 fw-semibold">Body Type</dt>
        <dd class="col-sm-8">@Model.BodyType</dd>

        <dt class="col-sm-4 fw-semibold">Fuel Type</dt>
        <dd class="col-sm-8">@Model.FuelType</dd>

        <dt class="col-sm-4 fw-semibold">Transmission</dt>
        <dd class="col-sm-8">@Model.Transmission</dd>

        <dt class="col-sm-4 fw-semibold">Seating Capacity</dt>
        <dd class="col-sm-8">@Model.SeatingCapacity</dd>

        <dt class="col-sm-4 fw-semibold">Engine Capacity</dt>
        <dd class="col-sm-8">@Model.EngineCapacity</dd>

        @* Optional Fields if needed
        <dt class="col-sm-4 fw-semibold">Daily Rent Price</dt>
        <dd class="col-sm-8">@Model.DailyRentPrice.ToString("C")</dd>

        <dt class="col-sm-4 fw-semibold">Deposit Amount</dt>
        <dd class="col-sm-8">@Model.DepositAmount.ToString("C")</dd> *@
    </dl>

    <form asp-action="Delete" method="post" onsubmit="return confirmDelete();">
        <input type="hidden" asp-for="CarModelID" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger shadow-sm px-4 py-2 animate__animated animate__pulse animate__infinite">
                🗑️ Confirm Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm px-4 py-2">
                ↩ Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("⚠️ Are you sure you want to delete this car model?\n\nOnce deleted, this record cannot be recovered.");
        }
    </script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
}
