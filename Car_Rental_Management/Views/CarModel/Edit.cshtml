@model Car_Rental_Management.Models.CarModel

<h2 class="mb-4">Edit Car Model</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CarModelID" />

    <div class="row">
        <!-- Brand -->
        <div class="col-md-6 mb-3">
            <label asp-for="Brand" class="form-label"></label>
            <input asp-for="Brand" class="form-control" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <!-- Model Name -->
        <div class="col-md-6 mb-3">
            <label asp-for="ModelName" class="form-label"></label>
            <input asp-for="ModelName" class="form-control" />
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>

        <!-- Year -->
        <div class="col-md-4 mb-3">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" type="number" min="1950" max="2100" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <!-- Body Type -->
        <div class="col-md-4 mb-3">
            <label asp-for="BodyType" class="form-label"></label>
            <select asp-for="BodyType" class="form-select">
                <option value="">-- Select Body Type --</option>
                <option>Sedan</option>
                <option>SUV</option>
                <option>Hatchback</option>
                <option>Truck</option>
                <option>Van</option>
            </select>
            <span asp-validation-for="BodyType" class="text-danger"></span>
        </div>

        <!-- Fuel Type -->
        <div class="col-md-4 mb-3">
            <label asp-for="FuelType" class="form-label"></label>
            <select asp-for="FuelType" class="form-select">
                <option value="">-- Select Fuel Type --</option>
                <option>Petrol</option>
                <option>Diesel</option>
                <option>Hybrid</option>
                <option>Electric</option>
            </select>
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>

        <!-- Transmission -->
        <div class="col-md-4 mb-3">
            <label asp-for="Transmission" class="form-label"></label>
            <select asp-for="Transmission" class="form-select">
                <option value="">-- Select Transmission --</option>
                <option>Automatic</option>
                <option>Manual</option>
                <option>CVT</option>
            </select>
            <span asp-validation-for="Transmission" class="text-danger"></span>
        </div>

        <!-- Seating Capacity -->
        <div class="col-md-4 mb-3">
            <label asp-for="SeatingCapacity" class="form-label"></label>
            <input asp-for="SeatingCapacity" class="form-control" type="number" />
            <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
        </div>

        <!-- Engine Capacity -->
        <div class="col-md-4 mb-3">
            <label asp-for="EngineCapacity" class="form-label"></label>
            <input asp-for="EngineCapacity" class="form-control" />
            <span asp-validation-for="EngineCapacity" class="text-danger"></span>
        </div>

        <!-- Car Logo -->
        <div class="col-md-6 mb-3">
            <label asp-for="LogoUrl" class="form-label fw-bold"></label>
            <input asp-for="LogoUrl" class="form-control" placeholder="Enter logo image URL" />
            <span asp-validation-for="LogoUrl" class="text-danger"></span>

            @* Show current logo if available *@
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <div class="mt-2">
                    <img src="@Model.LogoUrl" alt="Car Logo" style="max-height:80px;" class="border rounded shadow-sm" />
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">💾 Update</button>
        <a asp-action="Index" class="btn btn-secondary">↩ Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
