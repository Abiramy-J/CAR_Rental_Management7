@model Car_Rental_Management.Models.CarModel

<h2 class="mb-4 text-center fw-bold text-warning animate__animated animate__fadeInDown">
    ✏️ Edit Car Model
</h2>

<form asp-action="Edit" method="post" class="shadow p-4 rounded-3 bg-white animate__animated animate__fadeInUp">
    <input type="hidden" asp-for="CarModelID" />

    <div class="row g-3">
        <!-- Brand -->
        <div class="col-md-6">
            <label asp-for="Brand" class="form-label fw-semibold"></label>
            <input asp-for="Brand" class="form-control shadow-sm" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <!-- Model Name -->
        <div class="col-md-6">
            <label asp-for="ModelName" class="form-label fw-semibold"></label>
            <input asp-for="ModelName" class="form-control shadow-sm" />
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>

        <!-- Year -->
        <div class="col-md-4">
            <label asp-for="Year" class="form-label fw-semibold"></label>
            <input asp-for="Year" class="form-control shadow-sm" type="number" min="1950" max="2100" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <!-- Body Type -->
        <div class="col-md-4">
            <label asp-for="BodyType" class="form-label fw-semibold"></label>
            <select asp-for="BodyType" class="form-select shadow-sm">
                <option value="">-- Select Body Type --</option>
                <option>Sedan</option>
                <option>SUV</option>
                <option>Hatchback</option>
                <option>Truck</option>
                <option>Van</option>
            </select>
            <span asp-validation-for="BodyType" class="text-danger"></span>
        </div>

        <!-- Fuel Type -->
        <div class="col-md-4">
            <label asp-for="FuelType" class="form-label fw-semibold"></label>
            <select asp-for="FuelType" class="form-select shadow-sm">
                <option value="">-- Select Fuel Type --</option>
                <option>Petrol</option>
                <option>Diesel</option>
                <option>Hybrid</option>
                <option>Electric</option>
            </select>
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>

        <!-- Transmission -->
        <div class="col-md-4">
            <label asp-for="Transmission" class="form-label fw-semibold"></label>
            <select asp-for="Transmission" class="form-select shadow-sm">
                <option value="">-- Select Transmission --</option>
                <option>Automatic</option>
                <option>Manual</option>
                <option>CVT</option>
            </select>
            <span asp-validation-for="Transmission" class="text-danger"></span>
        </div>

        <!-- Seating Capacity -->
        <div class="col-md-4">
            <label asp-for="SeatingCapacity" class="form-label fw-semibold"></label>
            <input asp-for="SeatingCapacity" class="form-control shadow-sm" type="number" />
            <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
        </div>

        <!-- Engine Capacity -->
        <div class="col-md-4">
            <label asp-for="EngineCapacity" class="form-label fw-semibold"></label>
            <input asp-for="EngineCapacity" class="form-control shadow-sm" />
            <span asp-validation-for="EngineCapacity" class="text-danger"></span>
        </div>

        <!-- Car Logo -->
        <div class="col-md-6">
            <label asp-for="LogoUrl" class="form-label fw-semibold"></label>
            <input asp-for="LogoUrl" class="form-control shadow-sm" placeholder="Enter logo image URL" />
            <span asp-validation-for="LogoUrl" class="text-danger"></span>

            @* Show current logo if available *@
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <div class="mt-3 text-center animate__animated animate__fadeIn">
                    <p class="text-muted mb-1">Current Logo:</p>
                    <img src="@Model.LogoUrl" alt="Car Logo" style="max-height:100px;" class="border rounded shadow-sm" />
                </div>
            }
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <button type="submit" class="btn btn-warning px-4 py-2 shadow-sm text-white animate__animated animate__pulse animate__infinite">
            💾 Update
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 shadow-sm">
            ↩ Cancel
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
}
