@model Car_Rental_Management.Models.CarModel

<h2 class="mb-4 text-center fw-bold text-primary animate__animated animate__fadeInDown">
    🚘 Add New Car Model
</h2>

<form asp-action="Create" method="post" class="shadow-lg p-4 rounded-3 bg-light animate__animated animate__fadeInUp">
    <div class="row g-3">
        <!-- Brand -->
        <div class="col-md-6">
            <label asp-for="Brand" class="form-label fw-semibold"></label>
            <input asp-for="Brand" class="form-control shadow-sm" placeholder="e.g. Toyota, Honda" />
            <span asp-validation-for="Brand" class="text-danger"></span>
        </div>

        <!-- Model Name -->
        <div class="col-md-6">
            <label asp-for="ModelName" class="form-label fw-semibold"></label>
            <input asp-for="ModelName" class="form-control shadow-sm" placeholder="e.g. Corolla, Civic" />
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>

        <!-- Year -->
        <div class="col-md-4">
            <label asp-for="Year" class="form-label fw-semibold"></label>
            <input asp-for="Year" class="form-control shadow-sm" type="number" min="1950" max="2100" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <!-- Body Type -->
        <div class="col-md-4">
            <label asp-for="BodyType" class="form-label fw-semibold"></label>
            <select asp-for="BodyType" class="form-select shadow-sm">
                <option value="">-- Select Body Type --</option>
                <option>Sedan</option>
                <option>SUV</option>
                <option>Hatchback</option>
                <option>Truck</option>
                <option>Van</option>
            </select>
            <span asp-validation-for="BodyType" class="text-danger"></span>
        </div>

        <!-- Fuel Type -->
        <div class="col-md-4">
            <label asp-for="FuelType" class="form-label fw-semibold"></label>
            <select asp-for="FuelType" class="form-select shadow-sm">
                <option value="">-- Select Fuel Type --</option>
                <option>Petrol</option>
                <option>Diesel</option>
                <option>Hybrid</option>
                <option>Electric</option>
            </select>
            <span asp-validation-for="FuelType" class="text-danger"></span>
        </div>

        <!-- Transmission -->
        <div class="col-md-4">
            <label asp-for="Transmission" class="form-label fw-semibold"></label>
            <select asp-for="Transmission" class="form-select shadow-sm">
                <option value="">-- Select Transmission --</option>
                <option>Automatic</option>
                <option>Manual</option>
                <option>CVT</option>
            </select>
            <span asp-validation-for="Transmission" class="text-danger"></span>
        </div>

        <!-- Seating Capacity -->
        <div class="col-md-4">
            <label asp-for="SeatingCapacity" class="form-label fw-semibold"></label>
            <input asp-for="SeatingCapacity" class="form-control shadow-sm" type="number" placeholder="e.g. 5" />
            <span asp-validation-for="SeatingCapacity" class="text-danger"></span>
        </div>

        <!-- Engine Capacity -->
        <div class="col-md-4">
            <label asp-for="EngineCapacity" class="form-label fw-semibold"></label>
            <input asp-for="EngineCapacity" class="form-control shadow-sm" placeholder="e.g. 1500cc" />
            <span asp-validation-for="EngineCapacity" class="text-danger"></span>
        </div>

        <!-- Logo URL -->
        <div class="col-md-12">
            <label asp-for="LogoUrl" class="form-label fw-semibold"></label>
            <input asp-for="LogoUrl" class="form-control shadow-sm" placeholder="https://example.com/logo.png" />
            <span asp-validation-for="LogoUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <button type="submit" class="btn btn-success px-4 py-2 shadow-sm animate__animated animate__pulse animate__infinite">
            💾 Save
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 shadow-sm">
            ↩ Cancel
        </a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3 animate__animated animate__shakeX">
            ⚠️ Please correct the errors before submitting.
        </div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
}
