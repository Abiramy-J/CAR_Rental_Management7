<!-- Main Content -->
<!-- Main Content -->
<div class="main-content">
    <div class="dashboard-header shadow-lg animate__animated animate__fadeInDown">
        <h2 class="mb-0"><i class="fa fa-tags me-2"></i> 🚘 Car Models Management</h2>
    </div>

    <a asp-action="Create" class="btn btn-success mb-3 animate__animated animate__fadeInUp">
        <i class="fa fa-plus"></i> Add New Model
    </a>

    <div class="table-responsive">
        <table class="table table-hover align-middle shadow-lg rounded-4 overflow-hidden animate__animated animate__fadeInUp">
            <thead>
                <tr>
                    <th>Logo</th>
                    <th>Brand</th>
                    <th>Model Name</th>
                    <th>Year</th>
                    <th>Body Type</th>
                    <th>Fuel</th>
                    <th>Transmission</th>
                    <th>Seats</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="table-row">
                        <td>
                            @if (!string.IsNullOrEmpty(item.LogoUrl))
                            {
                                <img src="@item.LogoUrl" alt="@item.Brand Logo"
                                     class="img-thumbnail logo-img" />
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No Logo</span>
                            }
                        </td>
                        <td>@item.Brand</td>
                        <td>@item.ModelName</td>
                        <td>@item.Year</td>
                        <td>@item.BodyType</td>
                        <td>@item.FuelType</td>
                        <td>@item.Transmission</td>
                        <td>@item.SeatingCapacity</td>
                        <td>
                            <a class="btn btn-warning btn-sm me-2 btn-animate"
                               asp-action="Edit" asp-route-id="@item.CarModelID">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-danger btn-sm btn-animate"
                               asp-action="Delete" asp-route-id="@item.CarModelID"
                               onclick="return confirm('Are you sure you want to delete this model?');">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

