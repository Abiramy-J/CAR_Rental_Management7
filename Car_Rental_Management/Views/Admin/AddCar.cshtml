<div class="main-content">
    <div class="dashboard-header">
        <h2>🚗 Add New Car</h2>
        <a asp-action="CarList" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Back</a>
    </div>

    <div class="form-card">
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <form asp-action="AddCar" method="post" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Car.CarModelID" class="form-label">Select Model</label>
                    <select asp-for="Car.CarModelID" asp-items="Model.CarModelList" class="form-select">
                        <option value="">-- Select Car Model --</option>
                    </select>
                    <span asp-validation-for="Car.CarModelID" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Car.Color" class="form-label"></label>
                    <input asp-for="Car.Color" class="form-control" placeholder="e.g., Black, White" />
                    <span asp-validation-for="Car.Color" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Car.Mileage" class="form-label"></label>
                    <input asp-for="Car.Mileage" class="form-control" type="number" placeholder="e.g., 15000" />
                    <span asp-validation-for="Car.Mileage" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Car.DailyRate" class="form-label"></label>
                    <input asp-for="Car.DailyRate" class="form-control" type="number" step="0.01" placeholder="e.g., 49.99" />
                    <span asp-validation-for="Car.DailyRate" class="text-danger"></span>
                </div>

                <!-- Main Image -->
                <div class="col-md-6">
                    <label asp-for="ImageFile" class="form-label">Main Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" onchange="previewImage(event, 'mainPreview')" />
                    <img id="mainPreview" class="preview-img d-none" />
                </div>

                <!-- Optional Images -->
                <div class="col-md-6">
                    <label class="form-label">Optional Images</label>
                    <input asp-for="ImageFile2" type="file" class="form-control mb-1" accept="image/*" onchange="previewImage(event, 'opt1')" />
                    <img id="opt1" class="preview-img d-none" />

                    <input asp-for="ImageFile3" type="file" class="form-control mb-1" accept="image/*" onchange="previewImage(event, 'opt2')" />
                    <img id="opt2" class="preview-img d-none" />

                    <input asp-for="ImageFile4" type="file" class="form-control mb-1" accept="image/*" onchange="previewImage(event, 'opt3')" />
                    <img id="opt3" class="preview-img d-none" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Car.VideoUrl" class="form-label">Video URL (YouTube)</label>
                    <input asp-for="Car.VideoUrl" class="form-control" placeholder="Optional YouTube video link" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Car.Description" class="form-label">Description</label>
                    <textarea asp-for="Car.Description" class="form-control" rows="4" placeholder="Car details, special features, etc."></textarea>
                </div>

                <div class="col-md-6">
                    <label asp-for="Car.Status" class="form-label">Availability Status</label>
                    <select asp-for="Car.Status" asp-items="Model.StatusList" class="form-select">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="Car.Status" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-4 text-end">
                <button type="submit" class="btn btn-success me-2"><i class="fa fa-save"></i> Save Car</button>
                <a asp-action="CarList" class="btn btn-secondary"><i class="fa fa-times"></i> Cancel</a>
            </div>
        </form>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            <ul>
                @foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(event, previewId) {
            var output = document.getElementById(previewId);
            output.src = URL.createObjectURL(event.target.files[0]);
            output.classList.remove("d-none");
        }
    </script>
}

