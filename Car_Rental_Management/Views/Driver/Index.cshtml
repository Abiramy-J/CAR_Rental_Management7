@model IEnumerable<Car_Rental_Management.Models.Driver>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Drivers";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<div class="main-content container my-5">

    <!-- Header -->
    <div class="text-center mb-4 animate__animated animate__fadeInDown">
        <h2 class="text-primary fw-bold">🚖 Driver Management</h2>
        <p class="text-muted">Manage all your drivers easily here.</p>
    </div>

    <!-- Add Driver Button -->
    <div class="text-center mb-4 animate__animated animate__fadeInUp">
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm animate__animated animate__pulse animate__infinite">
            <i class="bi bi-plus-circle"></i> Add New Driver
        </a>
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success animate__animated animate__fadeIn">
            @TempData["Success"]
        </div>
    }

    <!-- Driver Table -->
    <div class="table-responsive animate__animated animate__fadeInUp">
        <table class="table table-hover table-bordered shadow-sm align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Phone No</th>
                    <th>NIC</th>
                    <th>License No</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var driver in Model)
                {
                    <tr class="table-row-hover">
                        <td>@driver.FullName</td>
                        <td>@driver.PhoneNo</td>
                        <td>@driver.NIC</td>
                        <td>@driver.LicenseNo</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <a class="btn btn-sm btn-warning btn-hover" asp-action="Edit" asp-route-id="@driver.DriverId">
                                    ✏️ Edit
                                </a>
                                <a class="btn btn-sm btn-danger btn-hover" asp-action="Delete" asp-route-id="@driver.DriverId"
                                   onclick="return confirmDelete();">
                                    🗑️ Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Table hover animation */
    .table-row-hover:hover {
        background-color: #f1f8ff;
        transform: translateY(-2px);
        transition: all 0.2s ease-in-out;
    }

    /* Buttons hover animation */
    .btn-hover {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-hover:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    /* Table rounded & shadow */
    table {
        border-radius: 12px;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
    }
</style>

@@section Scripts {
<script>
    function confirmDelete() {
        return confirm("⚠️ Are you sure you want to delete this driver?\nThis action cannot be undone.");
    }
</script>
</section>
