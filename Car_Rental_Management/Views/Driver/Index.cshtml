@model IEnumerable<Car_Rental_Management.Models.Driver>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

@{
    ViewData["Title"] = "Drivers";
}

<h2>Driver List</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Driver</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone No</th>
            <th>NIC</th>
            <th>License No</th>
            <th>Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var driver in Model)
        {
            <tr>
                <td>@driver.FullName</td>
                <td>@driver.PhoneNo</td>
                <td>@driver.NIC</td>
                <td>@driver.LicenseNo</td>
                <td>@(driver.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@driver.DriverId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@driver.DriverId"
                       onclick="return confirm('Are you sure you want to delete this driver?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-2">@TempData["Success"]</div>
}
