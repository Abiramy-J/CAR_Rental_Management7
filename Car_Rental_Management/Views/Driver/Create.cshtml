@model Car_Rental_Management.Models.Driver

@{
    ViewData["Title"] = "Add Driver";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<div class="main-content container my-5">

    <!-- Header -->
    <div class="text-center mb-4 animate__animated animate__fadeInDown">
        <h2 class="fw-bold">➕ Add New Driver</h2>
        <p class="text-muted">Fill in the details below to add a new driver.</p>
    </div>

    <!-- Form Card -->
    <div class="card shadow-sm p-4 animate__animated animate__fadeInUp" style="max-width:600px; margin:auto;">
        <form asp-action="Create" method="post">

            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNo" class="form-label"></label>
                <input asp-for="PhoneNo" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NIC" class="form-label"></label>
                <input asp-for="NIC" class="form-control" placeholder="Enter NIC" />
                <span asp-validation-for="NIC" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LicenseNo" class="form-label"></label>
                <input asp-for="LicenseNo" class="form-control" placeholder="Enter license number" />
                <span asp-validation-for="LicenseNo" class="text-danger"></span>
            </div>

            @* Optional availability field can be enabled if needed *@
            @* <div class="form-check mb-3">
            <input asp-for="IsAvailable" class="form-check-input" />
            <label asp-for="IsAvailable" class="form-check-label">Available</label>
            </div> *@

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-success btn-hover">💾 Save</button>
                <a asp-action="Index" class="btn btn-secondary btn-hover">↩ Back</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Card hover animation */
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        transition: all 0.3s ease-in-out;
    }

    /* Buttons hover animation */
    .btn-hover {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-hover:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
