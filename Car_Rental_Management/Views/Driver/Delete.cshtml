@model Car_Rental_Management.Models.Driver

@{
    ViewData["Title"] = "Delete Driver";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<div class="main-content container my-5">

    <!-- Header -->
    <div class="text-center mb-4 animate__animated animate__fadeInDown">
        <h2 class="text-danger fw-bold">❌ Delete Driver</h2>
        <p class="text-muted">You are about to delete this driver permanently. This action cannot be undone.</p>
    </div>

    <!-- Driver Info Card -->
    <div class="card shadow-sm p-4 animate__animated animate__fadeInUp" style="max-width:600px; margin:auto;">
        <div class="mb-3">
            <strong>Name:</strong> @Model.FullName
        </div>
        <div class="mb-3">
            <strong>Phone No:</strong> @Model.PhoneNo
        </div>
        <div class="mb-3">
            <strong>NIC:</strong> @Model.NIC
        </div>
        <div class="mb-3">
            <strong>License No:</strong> @Model.LicenseNo
        </div>
        @* <div class="mb-3"><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</div> *@

        <form asp-action="Delete" method="post" onsubmit="return confirmDelete();" class="d-flex justify-content-between mt-4">
            <input type="hidden" asp-for="DriverId" />
            <button type="submit" class="btn btn-danger btn-hover">🗑️ Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary btn-hover">↩ Cancel</a>
        </form>
    </div>
</div>

<style>
    /* Card hover animation */
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        transition: all 0.3s ease-in-out;
    }

    /* Buttons hover animation */
    .btn-hover {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn-hover:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
</style>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("⚠️ Are you sure you want to delete this driver?\n\nOnce deleted, this record cannot be recovered.");
        }
    </script>
}
