<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <!-- Header with logo/brand -->
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <div>
                <h3 class="mb-0">🚘 eWheelz Car Rental Management</h3>
            </div>
            <div>
                <span class="fw-bold">Payment Successful ✅</span>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <!-- Car image -->
                <div class="col-md-4 text-center">
                    <img src="@(Model.Car.ImageUrl ?? "/images/default-car.png")" class="img-fluid rounded shadow-sm" alt="Car Image">
                </div>

                <!-- Booking details -->
                <div class="col-md-8">
                    <h5 class="card-title mb-3">Booking Summary</h5>

                    <div class="row mb-2">
                        <div class="col-5 fw-semibold">Booking ID:</div>
                        <div class="col-7">@Model.BookingID</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-5 fw-semibold">Car:</div>
                        <div class="col-7">@Model.Car.CarModel.Brand @Model.Car.CarModel.ModelName</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-5 fw-semibold">Pickup Date:</div>
                        <div class="col-7">@Model.PickupDate.ToString("dd MMM yyyy")</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-5 fw-semibold">Return Date:</div>
                        <div class="col-7">@Model.ReturnDate.ToString("dd MMM yyyy")</div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-5 fw-semibold">Payment Method:</div>
                        <div class="col-7">
                            <span class="badge bg-info text-dark">@Model.PaymentMethod</span>
                        </div>
                    </div>

                    <div class="row mb-2">
                        <div class="col-5 fw-semibold">Driver Needed:</div>
                        <div class="col-7">@((Model.NeedDriver) ? "Yes" : "No")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-5 fw-bold">Total Paid:</div>
                        <div class="col-7 text-success fs-5 fw-bold">Rs. @Model.TotalAmount:N2</div>
                    </div>
                </div>
            </div>

            <hr>

            <p class="text-center text-muted">Thank you for booking with us! A confirmation email has been sent.</p>

            <!-- Buttons -->
            <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
                <a asp-controller="Customer" asp-action="MyBookings" class="btn btn-primary btn-lg">
                    📖 My Bookings
                </a>
                <a asp-controller="Customer" asp-action="BrowseCars" class="btn btn-secondary btn-lg">
                    🚘 Browse Cars
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark btn-lg">
                    🏠 Home
                </a>
                <a asp-controller="Payment" asp-action="DownloadReceipt" asp-route-id="@Model.BookingID"
                   class="btn btn-success btn-lg">
                    ⬇️ Download Receipt
                </a>
            </div>
        </div>

        <div class="card-footer text-center text-muted small">
            ⚠️ No Refund Policy | Please contact support for any inquiries
        </div>
    </div>
</div>

<style>
    .card-title {
        border-bottom: 2px dashed #dee2e6;
        padding-bottom: 8px;
        margin-bottom: 15px;
    }

    .badge {
        font-size: 1rem;
        padding: 0.5em 0.8em;
    }

    .btn-lg {
        min-width: 150px;
    }

    @@media (max-width: 768px) {
        .row > div {
            margin-bottom: 10px;
        }
    }

    img {
        max-height: 180px;
    }

    /* Bottom to top animation */
    @@keyframes slideUp {
        from

    {
        transform: translateY(100px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .animate-bottom {
        animation: slideUp 0.8s ease-out;
    }
</style>

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Canvas Confetti -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.3/dist/confetti.browser.min.js"></script>

    <script>
        // Show popup after page load
        window.addEventListener("load", () => {
            Swal.fire({
                title: "🎉 Thank You!",
                text: "Thank you so much for your successful booking!",
                icon: "success",
                confirmButtonText: "OK",
                backdrop: `
                    rgba(0,0,123,0.4)
                    url("https://media.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif")
                    left top
                    no-repeat
                `
            });

            // Launch confetti
            fireConfetti();
        });

        // Confetti animation
        function fireConfetti() {
            var duration = 3 * 1000; // 3 seconds
            var end = Date.now() + duration;

            (function frame() {
                // Confetti burst
                confetti({
                    particleCount: 5,
                    angle: 60,
                    spread: 55,
                    origin: { x: 0 }
                });
                confetti({
                    particleCount: 5,
                    angle: 120,
                    spread: 55,
                    origin: { x: 1 }
                });

                if (Date.now() < end) {
                    requestAnimationFrame(frame);
                }
            }());
        }
    </script>
}



