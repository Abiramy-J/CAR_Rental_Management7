<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        /* Global Styles */
        body {
            background-color: #F1F5F9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background-color: #2c3e50;
            color: #ecf0f1;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .sidebar h4 {
                text-align: center;
                font-weight: 600;
                font-size: 1.5rem;
                margin-bottom: 30px;
            }

            .sidebar .nav-link {
                color: #ecf0f1;
                font-size: 14px;
                padding: 12px 20px;
                display: flex;
                align-items: center;
                border-radius: 6px;
                margin-bottom: 10px;
                transition: all 0.3s ease;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #34495e;
                    color: #fff;
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 30px;
            min-height: 100vh;
            background-color: #F1F5F9;
        }

        /* Content Container for Dashboard */
        .content-container {
            background-color: #fff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 6px 20px rgba(0,0,0,0.1);
            min-height: calc(100vh - 60px);
        }

        /* Topbar */
        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

            .topbar h2 {
                font-weight: 600;
                color: #2c3e50;
            }

        .btn-primary {
            background-color: #3498db;
            border: none;
            padding: 8px 16px;
            font-size: 14px;
            border-radius: 6px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #2980b9;
            }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #3498db;
            border-radius: 4px;
        }

        /* Cards inside content */
        .card {
            border: none;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 6px 20px rgba(0,0,0,0.05);
            margin-bottom: 20px;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.12);
            }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4>Admin Panel</h4>
        <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link active" href="@Url.Action("Dashboard", "Admin")"><i class="fa fa-home"></i> Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("CarList", "Admin")"><i class="fa fa-car"></i> Manage Cars</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "CarModel")"><i class="fa fa-tags"></i> Manage Models</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Location")"><i class="fa fa-location-dot"></i> Locations</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Booking", "Admin")"><i class="fa fa-book"></i> Booking History</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("CancelledBookings", "Admin")"><i class="fa fa-ban"></i> Cancelled Bookings / Refunds</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("CreateUser", "Admin")"><i class="fa fa-id-card"></i> Management</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Driver")"><i class="fa fa-id-card"></i> Manage Drivers</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Account")"><i class="fa fa-right-from-bracket"></i> Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @* <div class="topbar">
            <h2>@ViewData["Title"]</h2>
            <button class="btn btn-primary"><i class="fa fa-plus"></i> Add New</button>
        </div> *@

        <div class="content-container">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
