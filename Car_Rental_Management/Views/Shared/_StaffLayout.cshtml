<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Staff</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        /* Global Styles */
        body {
            background: #f0f2f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            transition: all 0.3s ease-in-out;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 250px;
            background: linear-gradient(180deg, #1e3a8a, #2563eb);
            color: #fff;
            padding: 25px 15px;
            box-shadow: 5px 0 20px rgba(0,0,0,0.1);
            display: flex;
            flex-direction: column;
        }

            .sidebar h4 {
                text-align: center;
                font-weight: 700;
                font-size: 1.5rem;
                margin-bottom: 40px;
                letter-spacing: 1px;
            }

            .sidebar .nav-link {
                color: #cbd5e1;
                font-size: 15px;
                padding: 12px 20px;
                display: flex;
                align-items: center;
                border-radius: 8px;
                margin-bottom: 8px;
                transition: all 0.3s ease-in-out;
            }

                .sidebar .nav-link i {
                    margin-right: 12px;
                    font-size: 18px;
                    min-width: 20px;
                }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: rgba(255, 255, 255, 0.2);
                    color: #fff;
                    transform: translateX(5px);
                }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 40px 30px;
            min-height: 100vh;
        }

        /* Cards & Panels */
        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            }

        /* Topbar */
        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

            .topbar h2 {
                font-weight: 600;
                color: #1e3a8a;
            }

        /* Buttons */
        .btn-primary {
            background: #2563eb;
            border: none;
            transition: background 0.3s ease;
        }

            .btn-primary:hover {
                background: #1e40af;
            }

        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(38, 99, 235, 0.6);
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4>⚙Staff Panel</h4>
        <ul class="nav flex-column">
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Dashboard", "Staff")"><i class="fa fa-home"></i> Dashboard</a></li>
            @* <li class="nav-item"><a class="nav-link" href="@Url.Action("AddCar", "Admin")"><i class="fa fa-plus"></i> Add Car</a></li> *@
            <li class="nav-item"><a class="nav-link" href="@Url.Action("CarList", "Staff")"><i class="fa fa-car"></i> Manage Cars</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "CarModel")"><i class="fa fa-tags"></i> Manage Models</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Booking", "Admin")"><i class="fa fa-book"></i> Bookings</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Location")"><i class="fa fa-location-dot"></i> Locations</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("User", "Staff")"><i class="fa fa-users"></i> Users</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Driver")"><i class="fa fa-id-card"></i> Manage Drivers</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Account")"><i class="fa fa-id-card"></i> Logout</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="topbar">
            <h2>@ViewData["Title"]</h2>
            <button class="btn btn-primary"><i class="fa fa-plus"></i> Add New</button>
        </div>

        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
