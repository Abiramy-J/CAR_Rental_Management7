@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;

    // Session values
    var username = HttpContextAccessor.HttpContext?.Session.GetString("Username") ?? "Guest";
    var profileImage = HttpContextAccessor.HttpContext?.Session.GetString("ProfileImageUrl") ?? "/images/default-profile.png";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Car Rental System (Customer)</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>
    <!-- 🔹 Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark custom-navbar shadow-sm animate__animated animate__faster animate__fadeInDown">
        <!-- [Existing Navbar Code] -->
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-white animate__animated animate__faster animate__fadeInLeft" asp-controller="Customer" asp-action="Dashboard">
                eWheelz Rentals
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse animate__animated animate__faster animate__fadeInRight" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item animate__animated animate__faster animate__fadeInUp animate__delay-0_1s">
                        <a class="nav-link text-white nav-hover" asp-controller="Customer" asp-action="BrowseCars">Browse Cars</a>
                    </li>
                    <li class="nav-item animate__animated animate__faster animate__fadeInUp animate__delay-0_2s">
                        <a class="nav-link text-white nav-hover" asp-controller="Account" asp-action="Profile">Profile</a>
                    </li>
                    <li class="nav-item animate__animated animate__faster animate__fadeInUp animate__delay-0_3s">
                        <a class="nav-link text-white nav-hover" asp-controller="Customer" asp-action="MyBookings">Booking History</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item me-3 text-white fw-semibold animate__animated animate__faster animate__fadeInUp animate__delay-0_4s">
                        Hello, @username
                    </li>
                    <li class="nav-item animate__animated animate__faster animate__fadeInUp animate__delay-0_4s">
                        <a href="@Url.Action("Profile", "Account")">
                            <img src="@profileImage" alt="Profile"
                                 class="rounded-circle shadow-sm"
                                 width="40"
                                 height="40"
                                 style="object-fit: cover; border:2px solid #fff;" />
                        </a>
                    </li>
                    <li class="nav-item animate__animated animate__faster animate__fadeInUp animate__delay-0_5s">
                        <a class="btn btn-outline-light ms-3 px-3 py-1 fw-semibold shadow-sm nav-button" asp-controller="Account" asp-action="Logout">
                            Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

   
    <div class="container mt-4 animate__animated animate__faster animate__fadeInUp">
        @RenderBody()
    </div>

    <!-- 🔹 Google Translate Widget -->
    <div id="google_translate_element" class="mt-3 text-end"></div>

    
    <footer class="bg-dark text-white text-center py-3 mt-4 animate__animated animate__faster animate__fadeInUp animate__delay-0_2s"> 
         <small>&copy; 2025 Car Rental System | Customer Portal</small> 
    </footer> 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Google Translate Script -->
    <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <script type="text/javascript">
        function googleTranslateElementInit() {
            new google.translate.TranslateElement({
                pageLanguage: 'en',
                layout: google.translate.TranslateElement.InlineLayout.SIMPLE,
                autoDisplay: false, 
                 includedLanguages: 'en,ta,si', 
                gaTrack: true 
            }, 'google_translate_element');
        }
    </script>
    @RenderSection("Scripts", required: false)

    <style>
        .custom-navbar {
            background: linear-gradient(90deg, #0d6efd, #6610f2);
            transition: background 0.3s ease-in-out;
        }

        .navbar-brand {
            font-size: 1.5rem;
            letter-spacing: 1px;
        }

        .nav-hover {
            position: relative;
            transition: color 0.2s ease-in-out;
        }

            .nav-hover::after {
                content: "";
                position: absolute;
                bottom: -4px;
                left: 0;
                width: 0%;
                height: 2px;
                background: #fff;
                transition: width 0.3s ease-in-out;
            }

            .nav-hover:hover {
                color: #ffdf00 !important;
            }

                .nav-hover:hover::after {
                    width: 100%;
                }

        .nav-button {
            border-radius: 20px;
            transition: all 0.3s ease;
        }

            .nav-button:hover {
                background: #fff;
                color: #0d6efd !important;
                transform: translateY(-3px);
                box-shadow: 0px 5px 15px rgba(0,0,0,0.2);
            }

        /* Style for Google Translate dropdown */
        #google_translate_element {
            padding: 10px;
        }

        .goog-te-gadget-simple {
            border: 1px solid #ccc;
            padding: 5px 10px;
            border-radius: 5px;
            background-color: #fff;
            font-size: 14px;
        }
    </style>
</body>
</html>
