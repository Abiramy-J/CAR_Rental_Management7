@model Car_Rental_Management.ViewModels.CustomerBrowseCarVM
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "🚘 Browse Cars";
    Layout = "_CustomerLayout";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" id="errorAlert">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" id="successAlert">@TempData["Success"]</div>
}



<h2 class="mb-4">🚘 Available Cars</h2>

<!-- Filters Container -->
<div class="card shadow p-3 mb-4 border border-primary" style="background-color: #f8f9fa;">
    <h5 class="mb-3">Filter Cars</h5>
    <form method="get">
        <div class="row g-3 justify-content-center">
            <div class="col-md-2">
                <select asp-for="SelectedCarModelID" asp-items="Model.CarModelList" class="form-select">
                    <option value="">-- All Models --</option>
                </select>
            </div>
            <div class="col-md-2">
                <input asp-for="MinRate" type="number" min="0" step="100" class="form-control" placeholder="Min Rate (LKR)" />
            </div>
            <div class="col-md-2">
                <input asp-for="MaxRate" type="number" min="0" step="100" class="form-control" placeholder="Max Rate (LKR)" />
            </div>
            <div class="col-md-2">
                <select asp-for="Status" asp-items="Model.StatusList" class="form-select">
                    <option value="">-- All Status --</option>
                </select>
            </div>
            <div class="col-md-2">
                <input asp-for="Keyword" class="form-control" placeholder="Keyword in description" />
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-primary w-100">Filter</button>
            </div>
        </div>
    </form>
</div>

<!-- Car Listing -->
<div class="row">
    @foreach (var car in Model.Cars)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow border-0 h-100">
                <img src="@car.ImageUrl" class="card-img-top" alt="Car Image" style="height:200px; object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@car.CarModel.Brand @car.CarModel.ModelName</h5>
                    <p><strong>Price/Day:</strong> @car.DailyRate.ToString("C")</p>
                    <div class="d-flex justify-content-between">
                        <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#carModal-@car.CarID">
                            🔍 More
                        </button>
                        <a href="@Url.Action("BookCar", "CustomerBooking", new { id = car.CarID })" class="btn btn-success btn-sm">
                            🏷 Book Now
                        </a>
                    </div>
                    <div class="form-check mt-2">
                        <input class="form-check-input compare-checkbox" type="checkbox" value="@car.CarID" id="compare-@car.CarID">
                        <label class="form-check-label" for="compare-@car.CarID">Compare</label>
                    </div>
                </div>
            </div>
        </div>

        <!-- Car Details Modal -->
        <div class="modal fade" id="carModal-@car.CarID" tabindex="-1" aria-labelledby="carModalLabel-@car.CarID" aria-hidden="true"
             data-bs-backdrop="false" data-bs-keyboard="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">@car.CarModel.Brand @car.CarModel.ModelName - Details</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body position-relative">
                        <button type="button" class="btn btn-outline-primary fw-bold position-absolute top-0 start-0 m-3 z-index-10" data-bs-dismiss="modal">
                            ⬅ Back
                        </button>

                        <!-- Instant Carousel -->
                        <div id="carousel-@car.CarID" class="carousel slide carousel-fade-none mb-3" data-bs-ride="false">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="@car.ImageUrl" class="d-block w-100" style="height:350px; object-fit:cover;" />
                                </div>
                                @if (!string.IsNullOrEmpty(car.ImageUrl2))
                                {
                                    <div class="carousel-item">
                                        <img src="@car.ImageUrl2" class="d-block w-100" style="height:350px; object-fit:cover;" />
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(car.ImageUrl3))
                                {
                                    <div class="carousel-item">
                                        <img src="@car.ImageUrl3" class="d-block w-100" style="height:350px; object-fit:cover;" />
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(car.ImageUrl4))
                                {
                                    <div class="carousel-item">
                                        <img src="@car.ImageUrl4" class="d-block w-100" style="height:350px; object-fit:cover;" />
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carousel-@car.CarID" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carousel-@car.CarID" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        </div>

                        <!-- Car Details -->
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Brand:</strong> @car.CarModel.Brand</li>
                            <li class="list-group-item"><strong>Model:</strong> @car.CarModel.ModelName</li>
                            <li class="list-group-item"><strong>Year:</strong> @car.CarModel.Year</li>
                            <li class="list-group-item"><strong>Body Type:</strong> @car.CarModel.BodyType</li>
                            <li class="list-group-item"><strong>Fuel:</strong> @car.CarModel.FuelType</li>
                            <li class="list-group-item"><strong>Transmission:</strong> @car.CarModel.Transmission</li>
                            <li class="list-group-item"><strong>Seats:</strong> @car.CarModel.SeatingCapacity</li>
                            <li class="list-group-item"><strong>Engine:</strong> @car.CarModel.EngineCapacity</li>
                            <li class="list-group-item"><strong>Mileage:</strong> @car.Mileage km</li>
                            <li class="list-group-item"><strong>Rate/Day:</strong> @car.DailyRate.ToString("C")</li>
                            <li class="list-group-item"><strong>Description:</strong> @car.Description</li>
                        </ul>
                    </div>
                    <div class="modal-footer d-flex justify-content-end">
                        <a href="@Url.Action("BookCar", "CustomerBooking", new { id = car.CarID })" class="btn btn-success me-2">🏷 Book This Car</a>
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">❌ Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Compare Button & Modal -->
<button type="button" class="btn btn-warning mt-3" id="compareBtn">Compare Selected Cars</button>
<div class="modal fade" id="compareModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="false" data-bs-keyboard="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Car Comparison</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="compareContent"></div>
        </div>
    </div>
</div>

<style>
    .card.shadow:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Allow full page interaction even with modal open */
    body.modal-open {
        overflow: visible !important;
    }

    /* Disable carousel animation for instant switch */
    .carousel-fade-none .carousel-inner {
        transition: none !important;
    }
    .carousel-fade-none .carousel-item {
        transition: none !important;
    }
</style>

@section Scripts {
    <script>
        // Compare Logic
        document.getElementById("compareBtn").addEventListener("click", function () {
            let selectedIds = Array.from(document.querySelectorAll(".compare-checkbox:checked")).map(cb => cb.value);
            if (selectedIds.length < 2) { alert("Select at least 2 cars to compare!"); return; }

            let compareHtml = '<table class="table table-bordered"><thead><tr><th>Feature</th>';
            selectedIds.forEach(id => {
                let carCard = document.getElementById("carModal-" + id);
                let title = carCard.querySelector(".modal-title").innerText;
                let specs = Array.from(carCard.querySelectorAll(".list-group-item")).map(li => li.innerHTML);
                compareHtml += `<th>${title}</th>`;
                if (!window.compareData) window.compareData = {};
                window.compareData[id] = specs;
            });
            compareHtml += '</tr></thead><tbody>';

            let features = ["Brand", "Model", "Year", "Body Type", "Fuel", "Transmission", "Seats", "Engine", "Mileage", "Rate/Day", "Description"];
            features.forEach((feat, index) => {
                compareHtml += `<tr><td>${feat}</td>`;
                selectedIds.forEach(id => {
                    compareHtml += `<td>${window.compareData[id][index]}</td>`;
                });
                compareHtml += '</tr>';
            });

            compareHtml += '</tbody></table>';
            document.getElementById("compareContent").innerHTML = compareHtml;
            new bootstrap.Modal(document.getElementById('compareModal')).show();
        });
    </script>

    <script>
    setTimeout(function () {
        document.getElementById("errorAlert")?.remove();
        document.getElementById("successAlert")?.remove();
    }, 4000); // hide after 4 seconds
</script>

}
