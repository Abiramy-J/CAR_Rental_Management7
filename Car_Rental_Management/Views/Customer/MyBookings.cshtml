@model IEnumerable<Car_Rental_Management.Models.Booking>

<div class="container mt-4">
    <h2 class="mb-4">📑 My Bookings</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <p>You don’t have any bookings yet.</p>
            <a asp-controller="Car" asp-action="Browse" class="btn btn-primary">🚘 Find Your Car</a>
        </div>
    }
    else
    {
        <table class="table table-bordered shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Car</th>
                    <th>Brand & Model</th>
                    <th>Booking Date</th>
                    <th>Return Date</th>
                    <th>Location</th>
                    <th>Payment</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>
                            <img src="@b.Car.ImageUrl" alt="Car Image"
                                 style="width:100px; height:auto; border-radius:8px;" />
                        </td>
                        <td>@b.Car.CarModel.Brand (@b.Car.CarModel.ModelName)</td>
                        <td>@b.PickupDate.ToShortDateString()</td>
                        <td>@b.ReturnDate.ToShortDateString()</td>
                        <td>@b.Location.Address</td>
                        <td>@(string.IsNullOrEmpty(b.PaymentMethod) ? "Pending" : b.PaymentMethod)</td>
                        <td>
                            <a asp-controller="Payment" asp-action="Receipt" asp-route-id="@b.BookingID" class="btn btn-info btn-sm">
                                View
                            </a>
                            <a asp-controller="Payment" asp-action="DownloadReceipt" asp-route-id="@b.BookingID" class="btn btn-success btn-sm">
                                Download
                            </a>
                        </td>
                        >
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
