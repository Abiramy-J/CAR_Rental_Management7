@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h3 class="text-center mb-4 text-primary">Reset Your Password</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success">@ViewBag.Success</div>
            }

            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold">Username</label>
                    <input type="text" class="form-control" name="username" required />
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control" name="email" required />
                </div>

                <div class="mb-3">
                    <label for="newPassword" class="form-label fw-semibold">New Password</label>
                    <input type="password" class="form-control" name="newPassword" required />
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-bold">Reset Password</button>
            </form>

            <div class="mt-3 text-center">
                <a asp-action="Login" class="text-decoration-none text-primary">Back to Login</a>
            </div>
        </div>
    </div>
</div>

