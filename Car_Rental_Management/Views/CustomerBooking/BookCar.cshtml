@model Car_Rental_Management.ViewModels.BookingVM

<h2>Book @Model.Car.CarModel.Brand @Model.Car.CarModel.ModelName</h2>

<div class="card mb-3" style="max-width: 600px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.Car.ImageUrl" class="img-fluid rounded-start" alt="Car Logo">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Car.CarModel.Brand @Model.Car.CarModel.ModelName</h5>
                <p class="card-text"><strong>Price per day:</strong> @Model.Car.DailyRate.ToString("C")</p>
                <p class="card-text"><strong>Body Type:</strong> @Model.Car.CarModel.BodyType</p>
                <p class="card-text"><strong>Transmission:</strong> @Model.Car.CarModel.Transmission</p>
            </div>
        </div>
    </div>
</div>

<form asp-action="BookCar" asp-controller="CustomerBooking" method="post">
    <input type="hidden" asp-for="CarID" />

    <div class="mb-3">
        <label asp-for="LocationID" class="form-label">Pickup Location</label>
        <select asp-for="LocationID" class="form-control" asp-items="Model.LocationList"></select>
        <span asp-validation-for="LocationID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PickupDate" class="form-label">Pickup Date</label>
        <input asp-for="PickupDate" type="date" class="form-control" />
        <span asp-validation-for="PickupDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ReturnDate" class="form-label">Return Date</label>
        <input asp-for="ReturnDate" type="date" class="form-control" />
        <span asp-validation-for="ReturnDate" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="NeedDriver" class="form-check-input" type="checkbox" id="needDriverCheckbox" />
        <label asp-for="NeedDriver" class="form-check-label">Need Company Driver?</label>
    </div>

    <div id="altDriverFields" style="display:@(Model.NeedDriver ? "none" : "block")">
        <h5>Alternate Driver Details</h5>
        <div class="mb-3">
            <label asp-for="AltDriverName" class="form-label">Driver Name</label>
            <input asp-for="AltDriverName" class="form-control" />
            <span asp-validation-for="AltDriverName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AltDriverIC" class="form-label">Driver IC</label>
            <input asp-for="AltDriverIC" class="form-control" />
            <span asp-validation-for="AltDriverIC" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="AltDriverLicenseNo" class="form-label">License No</label>
            <input asp-for="AltDriverLicenseNo" class="form-control" />
            <span asp-validation-for="AltDriverLicenseNo" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Proceed to Payment</button>
</form>

@section Scripts {
    <script>
        const checkbox = document.getElementById('needDriverCheckbox');
        const altDriverFields = document.getElementById('altDriverFields');

        checkbox.addEventListener('change', function () {
            altDriverFields.style.display = this.checked ? 'none' : 'block';
        });
    </script>
}
