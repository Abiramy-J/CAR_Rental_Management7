@{
    ViewData["Title"] = "Car Rental - Home";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<nav class="navbar navbar-expand-lg navbar-dark custom-navbar shadow-sm fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold text-white animate__animated animate__fadeInLeft" href="/">
            🚗 Universal Car Rental
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#homeNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse animate__animated animate__fadeInRight" id="homeNavbar">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white nav-hover" asp-controller="Account" asp-action="Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white nav-hover" asp-controller="Account" asp-action="Register">Register</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- Hero Section -->
<div class="hero-section text-white text-center d-flex align-items-center justify-content-center"
     style="background: url('@Url.Content("~/Images/Cars/Home.jpg")') no-repeat center center; background-size: cover; height: 90vh;">
    <div class="overlay"></div>
    <div class="content animate__animated animate__fadeIn">
        <h1 class="display-3 fw-bold">Welcome to our Universal Car Rental Service</h1>
        <p class="lead mb-4">Book your dream car anytime, anywhere with just a few clicks!</p>
        <a asp-controller="Customer" asp-action="BrowseCars" class="btn btn-lg btn-primary shadow-lg me-2">Book a Car</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-lg btn-outline-light shadow-lg">Register</a>
    </div>
</div>

<!-- Modern Car Search Section -->
<section class="section-search py-5">
    <div class="container">
        <h2 class="text-3d mb-4">Find Your Car</h2>
        <form asp-controller="Customer" asp-action="BrowseCars" method="get" class="row g-3 justify-content-center">
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</section>

<!-- Features Section -->
<div class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card feature-card shadow-lg p-4 h-100 animate__animated animate__fadeInUp">
                <i class="bi bi-car-front-fill text-primary display-4 mb-3 icon"></i>
                <h4>Wide Selection</h4>
                <p>Choose from sedans, SUVs, luxury cars, and more.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card shadow-lg p-4 h-100 animate__animated animate__fadeInUp">
                <i class="bi bi-cash-coin text-success display-4 mb-3 icon"></i>
                <h4>Affordable Prices</h4>
                <p>Competitive daily rates and special long-term discounts.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card feature-card shadow-lg p-4 h-100 animate__animated animate__fadeInUp">
                <i class="bi bi-shield-lock-fill text-danger display-4 mb-3 icon"></i>
                <h4>Safe & Reliable</h4>
                <p>All cars fully insured, maintained, and ready for your journey.</p>
            </div>
        </div>
    </div>
</div>

<!-- About Us Section -->
<section class="section-about py-5 bg-light">
    <div class="container text-center">
        <h2 class="text-3d mb-4">About Us</h2>
        <p class="lead">We are a leading car rental service providing safe, affordable, and luxurious vehicles to customers around the country. Our mission is to make car rental seamless and enjoyable.</p>
    </div>
</section>

<!-- Our Services Section -->
<section class="section-services py-5">
    <div class="container text-center">
        <h2 class="text-3d mb-5">Our Services</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="service-card p-4 shadow-lg">
                    <i class="bi bi-geo-alt text-primary display-4 mb-3"></i>
                    <h4>Pickup & Drop</h4>
                    <p>Convenient pickup and drop-off locations for your comfort.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card p-4 shadow-lg">
                    <i class="bi bi-clock-history text-success display-4 mb-3"></i>
                    <h4>24/7 Support</h4>
                    <p>Our team is available anytime to assist your rental needs.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card p-4 shadow-lg">
                    <i class="bi bi-stars text-warning display-4 mb-3"></i>
                    <h4>Luxury Rentals</h4>
                    <p>Exclusive luxury cars for special occasions and business needs.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Comparing Section -->
<section class="section-comparing py-5 bg-light">
    <div class="container text-center">
        <h2 class="text-3d mb-4">Compare Cars</h2>
        <p class="mb-5">Easily compare different cars by features, price, and availability to choose the perfect ride.</p>
        <a asp-controller="Customer" asp-action="BrowseCars" class="btn btn-primary btn-lg shadow-lg">Compare Now</a>
    </div>
</section>

<!-- FAQ Section -->
<section class="section-faq py-5">
    <div class="container">
        <h2 class="text-3d text-center mb-5">Frequently Asked Questions</h2>
        <div class="accordion" id="faqAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq1">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1">How can I book a car?</button>
                </h2>
                <div id="collapse1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">You can book a car online through our website by registering and selecting your desired vehicle.</div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq2">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2">Are the cars insured?</button>
                </h2>
                <div id="collapse2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">Yes, all our vehicles are fully insured for your safety and peace of mind.</div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq3">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3">What if I need to cancel?</button>
                </h2>
                <div id="collapse3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">You can cancel your booking as per our cancellation policy with full or partial refund depending on timing.</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact Us Section -->
<section class="section-contact py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="text-3d mb-4">Contact Us</h2>
        <p>Have questions? Reach out to our team for support and inquiries.</p>
        <p>Email: jk.dhanush22@gmail.com | Phone: 0723250281</p>
        <a asp-controller="Contact" asp-action="Index" class="btn btn-light btn-lg shadow-lg">Send a Message</a>
    </div>
</section>

<!-- Call to Action -->
<div class="cta-section text-center text-white py-5" style="background: #0d6efd;">
    <h2 class="mb-3 text-3d">Ready to start your journey?</h2>
    <a asp-controller="Customer" asp-action="BrowseCars" class="btn btn-light btn-lg shadow-lg">Browse Cars</a>
</div>

